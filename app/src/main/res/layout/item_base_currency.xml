<?xml version="1.0" encoding="utf-8"?>
<org.mushare.rate.tab.rate.BaseCurrencyLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baseCurrency"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:clipToPadding="false"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/list_vertical_margin"
    android:paddingLeft="@dimen/list_horizontal_margin"
    android:paddingTop="@dimen/list_vertical_margin"
    tools:ignore="ContentDescription">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewCountryFlag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/flag_horizontal_margin"
        android:layout_marginRight="@dimen/flag_horizontal_margin"
        app:cardCornerRadius="@dimen/flag_corner"
        app:cardPreventCornerOverlap="false">

        <ImageView
            android:id="@+id/imageViewBaseCountryFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </android.support.v7.widget.CardView>

    <org.mushare.rate.tab.rate.BaseCurrencyEditText
        android:id="@+id/editTextBase"
        style="@style/AppTheme.TextAppearanceNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/rate_horizontal_margin"
        android:layout_marginStart="@dimen/rate_horizontal_margin"
        android:background="@null"
        android:enabled="false"
        android:gravity="end"
        android:hint="@string/base_currency_default_number"
        android:imeActionId="6"
        android:imeOptions="flagNoExtractUi|actionDone"
        android:inputType="numberDecimal|numberSigned"
        android:maxLength="17"
        android:paddingRight="@dimen/list_horizontal_margin"
        android:textColorHint="@color/colorTextSecondary"/>

    <TextView
        android:id="@+id/textViewBaseCurrencyCode"
        style="@style/AppTheme.TextAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/cardViewCountryFlag"
        android:layout_toLeftOf="@+id/editTextBase"
        android:layout_toRightOf="@+id/cardViewCountryFlag"
        android:layout_toStartOf="@+id/editTextBase"
        android:ellipsize="end"
        android:singleLine="true"
        android:textAllCaps="true"
        android:typeface="monospace"/>

    <TextView
        android:id="@+id/textViewBaseCurrencyName"
        style="@style/AppTheme.TextAppearanceTiny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewBaseCurrencyCode"
        android:layout_toEndOf="@+id/cardViewCountryFlag"
        android:layout_toLeftOf="@+id/editTextBase"
        android:layout_toRightOf="@+id/cardViewCountryFlag"
        android:layout_toStartOf="@+id/editTextBase"
        android:ellipsize="end"
        android:singleLine="true"/>

</org.mushare.rate.tab.rate.BaseCurrencyLayout>