<?xml version="1.0" encoding="utf-8"?>
<org.mushare.rate.tab.rate.MySwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@color/colorToolbarBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/swipe_button_margin"
            app:srcCompat="@drawable/ic_currency_timeline"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_timeline"
            android:textAllCaps="true"
            android:textColor="@color/colorSwipeActionText"/>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/exchangeCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:clipToPadding="false"
        android:foreground="?selectableItemBackground"
        android:paddingBottom="@dimen/list_vertical_margin"
        android:paddingLeft="@dimen/list_horizontal_margin"
        android:paddingRight="@dimen/list_horizontal_margin"
        android:paddingTop="@dimen/list_vertical_margin">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewCountryFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/flag_horizontal_margin"
            android:layout_marginRight="@dimen/flag_horizontal_margin"
            app:cardBackgroundColor="@color/colorToolbarBackground"
            app:cardCornerRadius="@dimen/flag_corner"
            app:cardPreventCornerOverlap="false">

            <ImageView
                android:id="@+id/imageViewCountryFlag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textViewExchangeRate"
            style="@style/AppTheme.TextAppearanceNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/rate_horizontal_margin"
            android:layout_marginStart="@dimen/rate_horizontal_margin"
            android:text="@string/unknown"/>

        <TextView
            android:id="@+id/textViewCurrencyCode"
            style="@style/AppTheme.TextAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/cardViewCountryFlag"
            android:layout_toLeftOf="@+id/textViewExchangeRate"
            android:layout_toRightOf="@+id/cardViewCountryFlag"
            android:layout_toStartOf="@+id/textViewExchangeRate"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAllCaps="true"
            android:typeface="monospace"/>

        <TextView
            android:id="@+id/textViewCurrencyName"
            style="@style/AppTheme.TextAppearanceTiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewCurrencyCode"
            android:layout_toEndOf="@+id/cardViewCountryFlag"
            android:layout_toLeftOf="@+id/textViewExchangeRate"
            android:layout_toRightOf="@+id/cardViewCountryFlag"
            android:layout_toStartOf="@+id/textViewExchangeRate"
            android:ellipsize="end"
            android:singleLine="true"/>

    </RelativeLayout>
</org.mushare.rate.tab.rate.MySwipeLayout>