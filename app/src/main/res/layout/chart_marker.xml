<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:padding="@dimen/chart_marker_padding">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">

        <TextView
            android:id="@+id/tvContent"
            style="@style/AppTheme.TextAppearanceTiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/chart_marker_text_vertical_margin"
            android:layout_marginLeft="@dimen/chart_marker_text_horizontal_margin"
            android:layout_marginRight="@dimen/chart_marker_text_horizontal_margin"
            android:layout_marginTop="@dimen/chart_marker_text_vertical_margin"
            android:gravity="center"/>
    </android.support.v7.widget.CardView>
</FrameLayout>