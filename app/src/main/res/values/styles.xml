<resources>

    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="AppTheme.NoActionBarBase">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme.NoActionBarBase"></style>

    <style name="AppTheme.ListTitle">
        <!--<item name="textAllCaps">true</item>-->
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingLeft">@dimen/header_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/header_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/header_vertical_margin</item>
        <item name="android:paddingTop">@dimen/header_vertical_margin</item>
        <!--<item name="android:background">@color/colorListTitleBackground</item>-->
    </style>

    <style name="AppTheme.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <!--<item name="android:layout_marginLeft">@dimen/divider_horizontal_margin</item>-->
        <!--<item name="android:layout_marginRight">@dimen/divider_horizontal_margin</item>-->
        <item name="android:background">@color/colorListDivider</item>
    </style>


    <style name="AppTheme.TextAppearanceLarge">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="AppTheme.TextAppearanceNormal">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextAppearanceSmall">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="AppTheme.TextAppearanceTiny">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="AppTheme.TextAppearanceMessage">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="AppTheme.TextAppearanceAlphabetIndex">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>
